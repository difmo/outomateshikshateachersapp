<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/class_workview_itemCard1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/class_workviewVideoLinkImage"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_menu_gallery" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/classwork_viewVideoLinkTopinName"
    android:text="Video link Topic Name"
    android:layout_marginTop="10dp"
    android:textSize="20dp"
    android:textColor="@color/black"
    android:padding="5dp"
    android:layout_toRightOf="@+id/class_workviewVideoLinkImage"/>
                <ImageView
                    android:id="@+id/class_workviewVideoLinkImageOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/classwork_viewVideoLinkTopinName"
                    android:src="@drawable/ic_more_vert" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/class_workview_itemCard1"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/class_workview_itemCard2"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/class_workviewImageLinkImage"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_menu_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classwork_viewImageLinkTopinName"
                android:text="Video link Topic Name"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_toRightOf="@+id/class_workviewImageLinkImage"/>
            <ImageView
                android:id="@+id/class_workviewImageLinkImageOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="69dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/classwork_viewImageLinkTopinName"
                android:src="@drawable/ic_more_vert" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/class_workview_itemCard2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/class_workview_itemCard3"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/class_workviewFileLinkImage"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_menu_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classwork_viewFileLinkTopinName"
                android:text="Video link Topic Name"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_toRightOf="@+id/class_workviewFileLinkImage"/>
            <ImageView
                android:id="@+id/class_workviewFileLinkImageOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/classwork_viewFileLinkTopinName"
                android:src="@drawable/ic_more_vert" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
